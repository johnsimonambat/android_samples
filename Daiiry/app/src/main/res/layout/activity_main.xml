<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">


    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Post Tickets"
        android:id="@+id/post_ticket_button"
        android:layout_marginTop="75dp"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/account_manage_button"
        android:layout_alignEnd="@+id/account_manage_button" />

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="View Tckets"
        android:id="@+id/view_ticket_button"
        android:layout_below="@+id/post_ticket_button"
        android:layout_marginTop="52dp"
        android:layout_alignRight="@+id/post_ticket_button"
        android:layout_alignEnd="@+id/post_ticket_button" />

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="account manage button"
        android:id="@+id/account_manage_button"
        android:layout_below="@+id/view_ticket_button"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="59dp" />

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Feedback"
        android:id="@+id/button4"
        android:layout_below="@+id/account_manage_button"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp" />
</RelativeLayout>
